{% extends 'adminbase.html.twig' %}

{% block title %}House index{% endblock %}

{% block body %}

    <div class="span9">
        <div class="content">
            <div class="module">
                <div class="module-head">
                    <h3>
                        Comment List
                    </h3>
                </div>
                <div class="module-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Subject</th>
                            <th>Comment</th>
                            <th>Status</th>
                            <th>Ip</th>
                            <th>User</th>
                            <th>House</th>
                            <th>Rate</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.subject }}</td>
                                <td>{{ comment.comment }}</td>
                                <td>{{ comment.status }}</td>
                                <td>{{ comment.ip }}</td>
                                <td><a href="{{ path('admin_user_show', {'id': comment.userid}) }}">  {{ comment.name }} {{ comment.surname }} </a></td>
                                <td><a href="{{ path('admin_house_show', {'id': comment.houseid}) }}">  {{ comment.title }} </a></td>

                                <td>{{ comment.rate }}</td>
                                <td>
                                    <a href="{{ path('admin_comment_show', {'id': comment.id}) }}" class="btn  btn-warning">Show</a>
                                    </td>
                                    <td>
                                    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn  btn-success " >Edit</a>
                                </td>
                                <td>
                                    {{ include('admin/comment/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div><!--/.content-->
    </div><!--/.span9-->
    </div>
    </div>
    <!--/.container-->
    </div>
    <!--/.wrapper-->
{% endblock %}