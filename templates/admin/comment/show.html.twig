{% extends 'adminbase.html.twig' %}

{% block title %}Edit House{% endblock %}

{% block body %}
    <div class="span9">
        <div class="content">

            <div class="module">
                <div class="module-head">
                    <h3>
                        Comment
                    </h3>
                    <br>
                </div>
                <div class="module-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ comment.id }}</td>
                        </tr>
                        <tr>
                            <th>Subject</th>
                            <td>{{ comment.subject }}</td>
                        </tr>
                        <tr>
                            <th>Comment</th>
                            <td>{{ comment.comment }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ comment.status }}</td>
                        </tr>
                        <tr>
                            <th>Ip</th>
                            <td>{{ comment.ip }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ comment.userid }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Rate</th>
                            <td>{{ comment.rate }}</td>
                        </tr>
                        <tr>
                            <td>
                                <a href="{{ path('admin_comment_index') }}" class="btn btn-info ">
                                    <i class="icon-arrow-left"></i>
                                    <b>Back to list</b>
                                </a><br><br>
                            </td>
                        </tr>

                        </tbody>
                    </table>

                </div>
            </div>
        </div><!--/.content-->
    </div><!--/.span9-->
    </div>
    </div>
    <!--/.container-->
    </div>
    <!--/.wrapper-->
{% endblock %}


